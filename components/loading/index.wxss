.spinner {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin: auto;
  margin-top: 60%;
}

.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 1000rpx;
  background-color: #FF6767;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
  animation: bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
  animation-delay: -1.0s;
}

@-webkit-keyframes bounce {
  0%,100% {
      -webkit-transform: scale(0.0);
  }

  50% {
      -webkit-transform: scale(1.0);
  }
}

@keyframes bounce {
  0%,100% {
      transform: scale(0.0);
  }

  50% {
      transform: scale(1.0);
  }
}